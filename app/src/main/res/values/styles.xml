<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/fondo3</item>
        <item name="colorPrimaryDark">@color/cTrans</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>








    <!-- Arduino application theme. -->
    <style name="AppThemeMyExpenses" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryArduino</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkArduino</item>
        <item name="colorAccent">@color/colorAccentArduino</item>
        <item name="android:textColor">@color/colorAccentArduino</item>
    </style>

    <style name="AppThemeMyExpensesDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimaryArduino</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkArduino</item>
        <item name="colorAccent">@color/colorAccentArduino</item>
        <item name="android:textColor">@color/colorAccentArduino</item>
        <item name="android:background">#FFFF</item>
    </style>

    <style name="AppThemeMyExpensesToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkArduino</item>
        <item name="colorAccent">@color/colorAccentArduino</item>
        <item name="android:background">@color/cTrans</item>
    </style>

    <style name="FullscreenTheme" parent="AppThemeMyExpenses">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
